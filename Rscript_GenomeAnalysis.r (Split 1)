rmse_cor_nprobes <- cbind(rmse1,table1)
rmse_cor_nprobes <- rmse_cor_nprobes[c("Correlation", "RMSE", "nProbes")]

table_comparison <- rbind(l_cor_rmse_nprobes_df, rmse_cor_nprobes[1,])
